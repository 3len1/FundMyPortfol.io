@model IEnumerable<FundMyPortfol.io.Models.Package>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PledgeAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimesSelected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PledgeAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesSelected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="~/Projects/Details/@Html.DisplayFor(modelItem => item.ProjectNavigation.Id)">
                    @Html.DisplayFor(modelItem => item.ProjectNavigation.Title)
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
