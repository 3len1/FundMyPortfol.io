@model FundMyPortfol.io.Models.Package

@{
    ViewData["Title"] = "Create";
}

<h2>Create new package</h2> 

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PackageName" class="control-label"></label>
                <input asp-for="PackageName" class="form-control" />
                <span asp-validation-for="PackageName" class="text-danger">
                    Required field must not be empty
                </span>
            </div>
            <div class="form-group">
                <label asp-for="PackageLeft" class="control-label"></label>
                <input asp-for="PackageLeft" class="form-control" />
                <span asp-validation-for="PackageLeft" class="text-danger">
                    Required field must not be empty
                </span>
            </div>
            <div class="form-group">
                <label asp-for="PledgeAmount" class="control-label"></label>
                <input asp-for="PledgeAmount" class="form-control" />
                <span asp-validation-for="PledgeAmount" class="text-danger">
                    Required field must not be empty
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger">
                    Required field must not be empty
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="Project" class="form-control" asp-items="ViewBag.Project"></select>
            </div>
            <div class="form-group">
                <input id="submit-data" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
