@model FundMyPortfol.io.Models.Package
@using System.Security.Claims;
@{
    ViewData["Title"] = "Details";
}

<h2>Funding package</h2>

@if (User.Identity.IsAuthenticated && !User.FindFirstValue(ClaimTypes.NameIdentifier).Equals(Model.ProjectNavigation.ProjectCtrator.ToString()))
{
    <form asp-controller="Buy" asp-action="BuyForm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Buy" name="" class="btn btn-default" />
    </form>
}
<div>
    <h4>Package</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PackageName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PackageName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PledgeAmount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PledgeAmount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TimesSelected)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimesSelected)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PackageLeft)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PackageLeft)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProjectNavigation)
        </dt>
        <dd>
            <a href="~/Projects/Details/@Html.DisplayFor(model => model.ProjectNavigation.Id)">
                @Html.DisplayFor(model => model.ProjectNavigation.Title)
            </a>
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier).Equals(Model.ProjectNavigation.ProjectCtrator.ToString()))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
